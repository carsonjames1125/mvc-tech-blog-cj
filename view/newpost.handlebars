<div class="card">
    <h2 class="card-header">ADD A NEW POST!!</h2>

    <form class="card-body" id="newpost-form">

        <div class="mb-6">
            <label class="form-label">TITLE:</label>
            <input type="text" class="form-input" name="post-title"/>
        </div>

        <div class="mb-6">
            <label class="form-label">CONTENT:</label>
            <textarea class="form-textarea form-input" name="post-content"></textarea>
        </div>


        <div class="mb-6">
            <button type="submit" class="btn btn-primary">CREATE POST</button>
        </div>

    </form>
</div>

<script src="/js/newpost.js"></script>